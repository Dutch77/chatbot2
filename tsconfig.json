{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "index": ["src/index.ts"],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "types/*"
  ]
}

